{
  "manifest_version": 2,
  "name": "Insuranc Checker",
  "version": "1.0.0",
  "description": "This extension will check Insurances for clients",
  "author": "Mark Gocela",
  "icons": {
    "128": "./icons/icon128.png",
    "48": "./icons/icon48.png",
    "16": "./icons/icon16.png"
  },
  "page_action": {
    "default_icon": "./icons/icon128.png",
    "default_popup": "popup.html",
    "default_title": "Insurance Checker"
  },
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "contextMenus",
    "identity",
    "webRequest",
    "https://sit-mycrm.nzfsg.co.nz/*",
    "https://sit-mycrm.loanmarket.com.au/*"
  ],
  "background": {
    "scripts": ["./scripts/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./scripts/content.js", "./scripts/jquery-3.6.0.min.js"],
      "css": ["./styles/content.css"]
    }
  ]
}
